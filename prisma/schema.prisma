generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email           String   @id @unique
  name            String
  country         String
  letters         Letter[] @relation("letterAuth")
  responses       Letter[] @relation("responseAuth")
  letterToRespond Int?
}

model Letter {
  id                  Int       @id @default(autoincrement())
  letterAuthorEmail   String
  letterContent       String
  responseAuthorEmail String?
  responseContent     String?
  letterDate          DateTime  @default(now())
  responseDate        DateTime?
  letterAuthor        User      @relation("letterAuth", fields: [letterAuthorEmail], references: [email])
  responseAuthor      User?     @relation("responseAuth", fields: [responseAuthorEmail], references: [email])
  letterIsSpam        Boolean   @default(false)
  responseIsSpam      Boolean   @default(false)
}

model Report {
  reportId Int @id @default(autoincrement())
  reportDate DateTime @default(now())
  reportContentType ContentType 
  reportContent String
  reportContentAuthorEmail String
  reportCreatorEmail String
}

enum ContentType {
  LETTER
  RESPONSE
}
